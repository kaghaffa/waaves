<h1>Here are some vocalists we recommend for you!</h1>
<br><br>

<div class="row">
  <div class="col-md-12  col-xs-12">
    <div class="btn-group btn-group-justified">
      <a href="/search/results/production/<%= @request.id %>" class="btn btn-block btn-default">
        Producers
      </a>

      <a href="/search/results/vocals/<%= @request.id %>" class="btn btn-block btn-primary">
        Vocalists
      </a>

      <a href="/search/results/instruments/<%= @request.id %>" class="btn btn-block btn-default">
        Live instrumentalists
      </a>

      <a href="/search/results/mixandmaster/<%= @request.id %>" class="btn btn-block btn-default">
        Mixing and mastering engineers
      </a>


    </div>
  </div>
</div>
<br><br>

<div class="row">
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Username</th>
        <th>Favorite genres</th>
        <th>Soundcloud link(s)</th>
        <th>Similar artists</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>

      <% if @request.skillsearch_vocals %>
      <% @results.each do |user| %>
      <tr>
        <td><img src="<%= user.avatar_url %>" width="100"></td>
        <td><%= user.username %></td>
        <td><%= user.genre1 %>, <%= user.genre2 %>, <%= user.genre3 %></td>
        <td>
          <% if user.url1 != nil %>
          <a href="<%= user.url1 %>">Track 1 </a>
          <% else %>
          <% end %>
          <% if user.url2 != nil %>
          ,<a href="<%= user.url2 %>">Track 2 </a>
          <% else %>
          <% end %>
          <% if user.url1 != nil %>
          ,<a href="<%= user.url3 %>">Track 3 </a>
          <% else %>
          <% end %>
        </td>
        <td><%= user.similar %></td>
        <td>
          <form action="http://localhost:3000/accept_user" method="post">
            <input type="hidden" name="request_id" value="<%= @request.id %>">
            <input type="hidden" name="requestee_id" value="<%= user.user_id %>">
            <input type="hidden" name="desired_skill" value="<%= @desired_skill %>">
            <button class="btn btn-success">Accept</button>
          </td>
        </form>
      </tr>
      <% end %>

      <% else %>
      <% end %>
