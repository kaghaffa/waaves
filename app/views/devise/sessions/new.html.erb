<div id="auth-form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="auth-wrapper">
        <div class="auth-form-wrapper">
          <div class="auth-header">
            <h3>Sign in</h3>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form", role: "form" }) do |f| %>

          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.label :email, class: "control-label" %>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "you@email.com" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.label :password, class: "control-label" %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "•••" %>
              </div>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          </div>
          <% end -%>


          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.submit "Log in", class: "btn btn-success btn-block" %>
              </div>
            </div>
          </div>
          <% end %>

          <div class="row">
            <div class="col-sm-12">
              <div class="form-group text-center">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
